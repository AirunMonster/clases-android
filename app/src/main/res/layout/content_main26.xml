<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="holamundo.app.morales.nuria.holamundo.Main26Activity"
    tools:showIn="@layout/activity_main26">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    
            <ImageView
                android:id="@+id/imagen"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:src="@drawable/ic_launcher"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/botonIniTras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traslación"/>

            <Button
                android:id="@+id/botonIniRota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rotación"/>

            <Button
                android:id="@+id/botonIniDila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dilatación"/>

            <Button
                android:id="@+id/botonIniContra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraccion"/>

            <Button
                android:id="@+id/botonIniApa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aparición"/>

            <Button
                android:id="@+id/botonIniDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desaparición"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
